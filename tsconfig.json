{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/layout.jsx",
    "components/notification-bell.jsx",
    "app/(dashboard)/dashboard/users/page.tsx",
    "components/users/users-table.tsx",
    "components/notifications/notifications-form.tsx",
    "components/notifications/notifications-table.tsx",
    "app/(dashboard)/dashboard/payments/page.jsx"
  ],
  "exclude": ["node_modules"]
}
